<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_centerHorizontal="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:gravity="start"
        android:id="@+id/relativeLayout">


        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/C"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_white"/>


        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/D"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/C"
            android:layout_toEndOf="@+id/C"
            android:background="@drawable/button_white"/>



        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/E"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/D"
            android:layout_toEndOf="@+id/D"
            android:background="@drawable/button_white"/>


        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/F"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/E"
            android:layout_toEndOf="@+id/E"
            android:background="@drawable/button_white"/>


        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/G"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/F"
            android:layout_toEndOf="@+id/F"
            android:background="@drawable/button_white"/>


        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/A"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/G"
            android:layout_toEndOf="@+id/G"
            android:background="@drawable/button_white"/>



        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/B"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/A"
            android:layout_toEndOf="@+id/A"
            android:background="@drawable/button_white"/>




        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/C8Va"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/B"
            android:layout_toEndOf="@+id/B"
            android:background="@drawable/button_white"/>


        <Button
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/CSharp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_black"
            />

        <Button
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/DSharp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/button_black"
/>

        <Button
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/FSharp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginStart="300dp"
            android:background="@drawable/button_black"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/GSharp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="380dp"
            android:layout_marginStart="380dp"
            android:background="@drawable/button_black"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:id="@+id/ASharp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="460dp"
            android:layout_marginStart="460dp"
            android:background="@drawable/button_black"/>



    </RelativeLayout>



</LinearLayout>
